---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import FancyText from "../components/FancyText.astro";
---

<Layout>
  <Title slot="head">Home</Title>
  <main>
    <h1 class="text-3xl">Hi, this is Bruno 👋</h1>
    <section>
      <h1 class="text-xl">
        <FancyText
          fancy="I'm currently nurturing... 🌱"
          simple="Highlighted Projects 🌱"
        />
      </h1>
      <section>
        <h1 class="text-xl">
          <FancyText fancy="Writings... ✍️" simple="Recent Posts ✍️" />
        </h1>
      </section>
    </section>
  </main>
</Layout>
